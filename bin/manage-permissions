#!/usr/bin/env bash
# bin/manage-permissions - Manage Claude Code permissions for review-code
#
# Usage:
#   bin/manage-permissions add     # Add review-code permissions
#   bin/manage-permissions remove  # Remove review-code permissions
#   bin/manage-permissions status  # Check current permissions
#
# Description:
#   Manages review-code script permissions in ~/.claude/settings.json

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

info() {
    echo -e "${GREEN}✓${NC} $1"
}

warn() {
    echo -e "${YELLOW}⚠${NC} $1"
}

error() {
    echo -e "${RED}✗${NC} $1"
}

debug() {
    echo -e "${BLUE}→${NC} $1"
}

CLAUDE_DIR="${HOME}/.claude"
SETTINGS_FILE="${CLAUDE_DIR}/settings.json"

# Required permissions for review-code scripts
# Note: Commands with variable assignments need their own patterns because
# Claude Code matches from the beginning of the command string
permissions=(
    # Direct script invocation (new skill path)
    "Bash(~/.claude/skills/review-code/scripts/*:*)"
    # Variable assignments that call scripts
    "Bash(SESSION_ID=:*)"
    "Bash(review_data=:*)"
    # Temp file operations for session management
    "Bash(ls -la /tmp/review-code:*)"
    # Git operations
    "Bash(git rev-parse:*)"
    # File reading
    "Read(~/.claude/**)"
)

show_usage() {
    echo "Usage: bin/manage-permissions {add|remove|status}"
    echo ""
    echo "Commands:"
    echo "  add     - Add review-code permissions to settings.json"
    echo "  remove  - Remove review-code permissions from settings.json"
    echo "  status  - Check which permissions are currently configured"
    echo ""
}

check_prerequisites() {
    if ! command -v jq &> /dev/null; then
        error "jq is required but not installed"
        echo "Install with: brew install jq"
        exit 1
    fi

    if [[ ! -d "${CLAUDE_DIR}" ]]; then
        error "Claude Code directory not found: ${CLAUDE_DIR}"
        echo "Please install Claude Code first"
        exit 1
    fi
}

create_settings_if_needed() {
    if [[ ! -f "${SETTINGS_FILE}" ]]; then
        mkdir -p "${CLAUDE_DIR}"
        echo '{"permissions":{"allow":[],"deny":[],"ask":[]}}' > "${SETTINGS_FILE}"
        info "Created new settings file"
    fi
}

cmd_add() {
    echo ""
    echo "This will add the following permissions to ${SETTINGS_FILE}:"
    echo ""

    # Check what needs to be added
    local to_add=()
    local already_configured=()

    for perm in "${permissions[@]}"; do
        if jq -e ".permissions.allow | index(\"${perm}\")" "${SETTINGS_FILE}" > /dev/null 2>&1; then
            already_configured+=("${perm}")
        else
            to_add+=("${perm}")
        fi
    done

    # Show what will be added
    if [[ ${#to_add[@]} -gt 0 ]]; then
        echo "Permissions to add:"
        for perm in "${to_add[@]}"; do
            echo "  + ${perm}"
        done
    fi

    # Show what's already configured
    if [[ ${#already_configured[@]} -gt 0 ]]; then
        echo ""
        echo "Already configured (no change):"
        for perm in "${already_configured[@]}"; do
            echo "  ✓ ${perm}"
        done
    fi

    echo ""
    echo "These permissions allow review-code scripts to:"
    echo "  • Read git repository metadata"
    echo "  • Analyze code diffs"
    echo "  • Load context files"
    echo ""
    echo "All operations are READ-ONLY."

    # If nothing to add, exit early
    if [[ ${#to_add[@]} -eq 0 ]]; then
        echo ""
        info "All permissions are already configured"
        echo ""
        return 0
    fi

    # Prompt for confirmation
    echo ""
    read -p "Add ${#to_add[@]} permission(s)? [Y/n] " -n 1 -r
    echo ""

    if [[ ${REPLY} =~ ^[Nn]$ ]]; then
        echo ""
        warn "Cancelled - no changes made"
        echo ""
        return 0
    fi

    # Add the permissions
    echo ""
    for perm in "${to_add[@]}"; do
        if jq ".permissions.allow += [\"${perm}\"]" "${SETTINGS_FILE}" > "${SETTINGS_FILE}.tmp"; then
            mv "${SETTINGS_FILE}.tmp" "${SETTINGS_FILE}"
            echo "  + Added: ${perm}"
        else
            error "Failed to add permission: ${perm}"
            rm -f "${SETTINGS_FILE}.tmp"
            exit 1
        fi
    done

    echo ""
    info "Added ${#to_add[@]} permission(s)"
    echo ""
}

cmd_remove() {
    echo ""
    echo "Checking permissions in ${SETTINGS_FILE}:"
    echo ""

    # Check what can be removed
    local to_remove=()
    local not_configured=()

    for perm in "${permissions[@]}"; do
        if jq -e ".permissions.allow | index(\"${perm}\")" "${SETTINGS_FILE}" > /dev/null 2>&1; then
            to_remove+=("${perm}")
        else
            not_configured+=("${perm}")
        fi
    done

    # Show what will be removed
    if [[ ${#to_remove[@]} -gt 0 ]]; then
        echo "Permissions to remove:"
        for perm in "${to_remove[@]}"; do
            echo "  - ${perm}"
        done
    fi

    # Show what's not configured
    if [[ ${#not_configured[@]} -gt 0 ]]; then
        echo ""
        echo "Not configured (no change):"
        for perm in "${not_configured[@]}"; do
            echo "  ✓ ${perm}"
        done
    fi

    # If nothing to remove, exit early
    if [[ ${#to_remove[@]} -eq 0 ]]; then
        echo ""
        info "No permissions to remove"
        echo ""
        return 0
    fi

    # Prompt for confirmation
    echo ""
    read -p "Remove ${#to_remove[@]} permission(s)? [Y/n] " -n 1 -r
    echo ""

    if [[ ${REPLY} =~ ^[Nn]$ ]]; then
        echo ""
        warn "Cancelled - no changes made"
        echo ""
        return 0
    fi

    # Remove the permissions
    echo ""
    for perm in "${to_remove[@]}"; do
        if jq ".permissions.allow |= map(select(. != \"${perm}\"))" "${SETTINGS_FILE}" > "${SETTINGS_FILE}.tmp"; then
            mv "${SETTINGS_FILE}.tmp" "${SETTINGS_FILE}"
            echo "  - Removed: ${perm}"
        else
            error "Failed to remove permission: ${perm}"
            rm -f "${SETTINGS_FILE}.tmp"
            exit 1
        fi
    done

    echo ""
    info "Removed ${#to_remove[@]} permission(s)"
    echo ""
}

cmd_status() {
    echo ""
    echo "Checking permissions in ${SETTINGS_FILE}:"
    echo ""

    local configured_count=0
    local missing_count=0

    for perm in "${permissions[@]}"; do
        if jq -e ".permissions.allow | index(\"${perm}\")" "${SETTINGS_FILE}" > /dev/null 2>&1; then
            echo "  ✓ Configured: ${perm}"
            configured_count=$((configured_count + 1))
        else
            echo "  ✗ Not configured: ${perm}"
            missing_count=$((missing_count + 1))
        fi
    done

    echo ""
    if [[ "${configured_count}" -eq ${#permissions[@]} ]]; then
        info "All permissions are configured"
    elif [[ "${configured_count}" -eq 0 ]]; then
        warn "No permissions are configured"
        echo "  Run: bin/manage-permissions add"
    else
        warn "Some permissions are missing (${missing_count} of ${#permissions[@]})"
        echo "  Run: bin/manage-permissions add"
    fi
    echo ""
}

# Main
check_prerequisites
create_settings_if_needed

command="${1:-}"

case "${command}" in
    add)
        cmd_add
        ;;
    remove)
        cmd_remove
        ;;
    status)
        cmd_status
        ;;
    "")
        # No argument - default to add for backwards compatibility
        cmd_add
        ;;
    *)
        error "Unknown command: ${command}"
        echo ""
        show_usage
        exit 1
        ;;
esac
